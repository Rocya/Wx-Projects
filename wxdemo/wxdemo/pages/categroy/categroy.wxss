/* pages/categroy/categroy.wxss */
.categroy{
  display: flex
}
.left{
  width:rpx;
  height:100vh;
  border-right:2rpx solid #ab956d
}
.left-item{
  width:150rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center
}
.sel{
  width:146rpx;
  color:#ab956d;
  border-left:4rpx solid #ab956d
}
.right{
  height:100vh;
  flex:1;
  overflow: auto
}
.right view{
  height:100vh
}
.right-container{
  transition: all .5s
}
.img-content{
  width:100%;
  height:400rpx
}
.img-content image{
  width:100%;
  height:400rpx
}
.move0{
  transform: translateY(0)
}
.move1{
  transform: translateY(-100vh)
}
.move2{
  transform: translateY(-200vh)
}
.move3{
  transform: translateY(-300vh)
}
.move4{
  transform: translateY(-400vh)
}

/* goods */
.products-tpl{
  color:#000;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.products-item{
  width:260rpx;
  height:30rpx;
  background: #eee;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center
}
.products-item image{
  width:50%;
  height:50%
}